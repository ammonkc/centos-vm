{
  "variables": {
    "version": "3.0.0",
    "box_name": "entropy",
    "cm": "nocm",
    "cm_version": "",
    "cleanup_pause": "",
    "headless": true,
    "iso_url": "http://mirrors.kernel.org/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-Minimal.iso",
    "iso_local": "file:///Volumes/Burn/VMs/ISOs/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-Minimal.iso",
    "iso_checksum": "495a7d50eb7633c4667fbfc5e817bf244697c627",
    "ga_checksum": "9ab48f44ac26a6deb374cb5fe6bad103bbf4fdf5186140e2d40ebe48bd01f3ea",
    "update": "true",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "install_vagrant_key": true,
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  },
  "builders": [{
    "vm_name": "entropy",
    "type": "vmware-iso",
    "guest_os_type": "centos-64",
    "http_directory": "http",
    "iso_urls": [
      "{{ user `iso_local` }}",
      "{{ user `iso_url` }}"
    ],
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "ssh_username": "{{ user `ssh_username` }}",
    "ssh_password": "{{ user `ssh_password` }}",
    "ssh_wait_timeout": "10000s",
    "headless": "{{ user `headless` }}",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "entropy",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_urls": [
      "{{ user `iso_local` }}",
      "{{ user `iso_url` }}"
    ],
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "guest_os_type": "RedHat_64",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "guest_additions_sha256": "{{ user `ga_checksum` }}",
    "guest_additions_url": "file:///Volumes/Burn/VMs/ISOs/virtualbox/{{.Version}}/VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "{{ user `ssh_username` }}",
    "ssh_password": "{{ user `ssh_password` }}",
    "ssh_wait_timeout": "10000s",
    "headless": "{{ user `headless` }}",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  },
  {
    "vm_name": "entropy",
    "type": "parallels-iso",
    "http_directory": "http",
    "iso_urls": [
      "{{ user `iso_local` }}",
      "{{ user `iso_url` }}"
    ],
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "guest_os_type": "centos",
    "parallels_tools_flavor": "lin",
    "ssh_username": "{{ user `ssh_username` }}",
    "ssh_password": "{{ user `ssh_password` }}",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 10140,
    "prlctl": [
      ["set", "{{.Name}}", "--memsize", "512"],
      ["set", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "CM={{user `cm`}}",
      "CM_VERSION={{user `cm_version`}}",
      "CLEANUP_PAUSE={{user `cleanup_pause`}}",
      "UPDATE={{user `update`}}",
      "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
      "SSH_USERNAME={{user `ssh_username`}}",
      "SSH_PASSWORD={{user `ssh_password`}}",
      "http_proxy={{user `http_proxy`}}",
      "https_proxy={{user `https_proxy`}}",
      "ftp_proxy={{user `ftp_proxy`}}",
      "rsync_proxy={{user `rsync_proxy`}}",
      "no_proxy={{user `no_proxy`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/fix-slow-dns.sh",
      "script/sshd.sh",
      "script/update.sh",
      "script/vagrant.sh",
      "script/vmtool.sh",
      "script/cmtool.sh",
      "script/repos.sh",
      "script/utils.sh",
      "script/wkhtmltox-centos7.sh",
      "script/server.sh",
      "script/cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "box/{{.Provider}}/{{user `box_name`}}-{{user `version`}}.box"
  }]
}
